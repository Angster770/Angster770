<% layout ('/layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center pt-3">Edit Gan Israel</h1>
        <div class="col-6 offset-3">
            <form action="/ganisraels/<%=ganisrael._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="ganisrael[title]" value="<%= ganisrael.title %>" required>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="ganisrael[location]" value="<%= ganisrael.location %>" required>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price of Gan Israel</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="ganisrael[price]" value="<%= ganisrael.price %>" required>
                        <div class="valid-feedback">
                            Looks Good
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="ganisrael[description]" required><%= ganisrael.description %></textarea>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Edit Images</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
                </div>
                <div class="mb-3">
                    <% ganisrael.images.forEach(function(img, i) { %>
                        <img src="<%= img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete</label>
                        <%  }) %>
                </div>
                <div class="mb-3"><button class="btn btn-info">Update Gan Israel</button></div>
            </form>
            <a href="/ganisraels/<%=ganisrael._id%>">Back to Gan Israels</a>
        </div>
    </div>
    </div>