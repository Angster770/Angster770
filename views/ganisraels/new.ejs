<% layout ('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center pt-3">New Gan Israel</h1>
        <div class="col-6 offset-3">
            <form action="/ganisraels" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="ganisrael[title]" required>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="ganisrael[location]" required>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                </div>

                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="ganisrael[image]" required>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Price of Gan Israel</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="ganisrael[price]" required>
                        <div class="valid-feedback">
                            Looks Good
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="ganisrael[description]" required></textarea>
                    <div class="valid-feedback">
                        Looks Good
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Upload Images</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="image" multiple required>
                </div>
                <div class="mb-3"><button class="btn btn-success">Add Gan Israel</button></div>
            </form>
            <a href="/ganisraels">All Gan Israels</a>
        </div>
    </div>